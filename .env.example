# OpenEMR API Configuration
# Copy this file to .env and update with your actual OpenEMR instance details

# OpenEMR Base URL (without trailing slash)
OPENEMR_BASE_URL=https://demo.openemr.io/openemr

# OpenEMR Site Name (usually 'default')
OPENEMR_SITE=default

# OAuth2 Client Credentials (obtain these by registering your client)
OPENEMR_CLIENT_ID=your_client_id_here
OPENEMR_CLIENT_SECRET=your_client_secret_here

# Development Authentication (NOT for production)
# Only use for development and testing
OPENEMR_USERNAME=admin
OPENEMR_PASSWORD=pass

# Patient Demographics
TARGET_AGE_MINIMUM=18
SUPPORT_MULTI_GENERATIONAL=true

# Production Settings
# Enable for production deployment
OPENEMR_USE_AUTHORIZATION_CODE_FLOW=true
OPENEMR_REDIRECT_URI=https://your-app-domain.com/oauth/callback

# Development Mode
# Set to 'true' to use mock API instead of real OpenEMR
USE_MOCK_API=false

# HIPAA Compliance Settings
ENABLE_AUDIT_LOGGING=true
ENCRYPT_PHI_IN_LOGS=true
LOG_RETENTION_DAYS=2555  # 7 years for HIPAA compliance

# Voice Agent Specific Settings
MAX_VERIFICATION_ATTEMPTS=3
PATIENT_SESSION_TIMEOUT_MINUTES=15
APPOINTMENT_BOOKING_BUFFER_MINUTES=15

# Capitol Eye Care Practice Settings
PRACTICE_NAME="Capitol Eye Care"
PRACTICE_PHONE="(555) 123-4567"
PRACTICE_ADDRESS="123 Eye Care Lane, Springfield, IL 62701"

# Business Hours (24-hour format)
PRACTICE_OPEN_HOUR=8
PRACTICE_CLOSE_HOUR=17
PRACTICE_CLOSED_DAYS=Saturday,Sunday

# Appointment Types and Durations (in minutes)
ROUTINE_EXAM_DURATION=30
COMPREHENSIVE_EXAM_DURATION=60
FOLLOW_UP_DURATION=15
CONSULTATION_DURATION=45
EMERGENCY_DURATION=30

# Provider Default Settings
DEFAULT_APPOINTMENT_BUFFER=15  # minutes between appointments
ALLOW_DOUBLE_BOOKING=false
MAX_APPOINTMENTS_PER_HOUR=2

# API Rate Limiting
API_RATE_LIMIT_REQUESTS_PER_MINUTE=60
API_RATE_LIMIT_BURST=10

# Monitoring and Alerting
HEALTH_CHECK_INTERVAL_SECONDS=30
OPENEMR_CONNECTION_TIMEOUT_SECONDS=10
ALERT_EMAIL=admin@capitoleyecare.com

# Development Tools
ENABLE_API_DOCUMENTATION=true
ENABLE_SWAGGER_UI=true
LOG_LEVEL=debug