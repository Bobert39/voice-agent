# Patient Verification Service Environment Variables

# Server Configuration
PORT=3003
NODE_ENV=development
LOG_LEVEL=info

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/patient_verification_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# OpenEMR Configuration
OPENEMR_BASE_URL=http://localhost:8300
OPENEMR_CLIENT_ID=your_client_id_here
OPENEMR_CLIENT_SECRET=your_client_secret_here
OPENEMR_USERNAME=admin
OPENEMR_PASSWORD=pass

# Verification Settings
VERIFICATION_MAX_ATTEMPTS=3
VERIFICATION_SESSION_TIMEOUT=15
VERIFICATION_REQUIRE_PHONE=true

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here

# HIPAA Compliance Configuration
ENCRYPTION_KEY=your_32_char_encryption_key_here
AUDIT_RETENTION_DAYS=2555

# Service URLs
VOICE_AI_SERVICE_URL=http://localhost:3001
SCHEDULING_SERVICE_URL=http://localhost:3002
AUDIT_SERVICE_URL=http://localhost:3004
ADMIN_DASHBOARD_URL=http://localhost:3000