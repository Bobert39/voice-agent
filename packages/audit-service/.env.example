# Audit Service Environment Variables

# Server Configuration
PORT=3004
NODE_ENV=development
LOG_LEVEL=info

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/audit_service_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# HIPAA Audit Configuration
AUDIT_RETENTION_YEARS=7
AUDIT_LOG_ENCRYPTION=true
IMMUTABLE_LOGS=true

# AWS CloudWatch Configuration (Do not add real keys)
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
CLOUDWATCH_LOG_GROUP=/aws/lambda/audit-service

# Service URLs
VOICE_AI_SERVICE_URL=http://localhost:3001
SCHEDULING_SERVICE_URL=http://localhost:3002
PATIENT_VERIFICATION_SERVICE_URL=http://localhost:3003
ADMIN_DASHBOARD_URL=http://localhost:3000